<!DOCTYPE html>
<html>
  <head>
    <title>Movie: <%= title %></title>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('includes/nav.ejs'); %>
    <div class="detailContainer">
        <div class="moviePosterContainer">
          <img src="<%= movie.poster %>" alt="<%= title %>">
        </div>
        <div class="movieDetailsContainer">
          <div class="movieHead>"><h1><%= title %></h1></div>
          <p><strong>Directed By: </strong><% movie.directors.forEach((d) => { %> <%= d %>,  <% }) %></p>
          <p><strong>Genres: </strong><% movie.genres.forEach((g) => { %> <a href="/category/<%= g %>" class="genresEach"><%= g %></a> <% }) %></p>
          <p><strong>Cast: </strong><% movie.cast.forEach((c) => { %> <%= c %>,  <% }) %></p>
          <p><strong>Plot: </strong><% if(movie.fullplot) {%> <%= movie.fullplot %> <% } else { %> Movie plot not available <% } %></p>
          <p><strong>Release Date: </strong><%= movie.released %></p>
          <p><strong>Rated: </strong><%= movie.rated %></p>
          <p><strong>IMDB Ratings: </strong><%= movie.imdb.rating %></p>
          <p><strong>Awards: </strong><%= movie.awards.text %></p>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
